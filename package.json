{
  "name": "ai-stock-trading-system",
  "version": "2.0.0",
  "description": "AI-powered stock trading system with FastAPI backend and Next.js frontend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:frontend": "cd frontend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && uvicorn main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm run start",
    "build": "cd frontend && npm run build",
    "install:all": "npm install && cd frontend && npm install",
    "backend": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "frontend": "cd frontend && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
